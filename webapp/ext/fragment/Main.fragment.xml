		<sections>
			<ObjectPageSection titleUppercase="false" title="Personal view">
                <ObjectPageSubSection>
					<m:PlanningCalendar
						id="PlanningCalendar"            						
						rows="{calendar>/persons}"
						appointmentsVisualization="Filled"
						showEmptyIntervalHeaders="false"
						showWeekNumbers="true"
						viewKey="Week"
						startDateChange=".startDateChangeHandler"
						viewChange=".viewChangeHandler"
						startDate="{calendar>/startDate}"
						appointmentSelect=".handleAppointmentSelect"
						firstDayOfWeek="1"
					>

						<m:toolbarContent>
							<m:Button text="Create" press=".appointmentCreate" tooltip="Create new item"
							          id="btCreate2"
								      enabled="false"/>
							<m:Button id="PlanningCalendarLegendButton" icon="sap-icon://legend" press=".openLegend" tooltip="Open Planning Calendar legend" ariaHasPopup="Dialog" />
						</m:toolbarContent>
						<m:views>						    
							<m:PlanningCalendarView key="Week" intervalType="Week" description="Week" intervalsS="1" intervalsM="2" intervalsL="7"/>
							<m:PlanningCalendarView key="OneMonth" intervalType="OneMonth" description="Month" intervalsL="31"  />
						</m:views>
						<m:rows>
							<m:PlanningCalendarRow icon="{calendar>pic}"
												title="{calendar>ename}"
												text="{calendar>plans_txt}"
												appointments="{path : 'calendar>appointments', templateShareable: true}"
												>
								<m:appointments>
									<unified:CalendarAppointment
										startDate="{calendar>start}"
										endDate="{calendar>end2}"                            
										title="{calendar>role_text}"
										text="{calendar>tooltip}"
										type="{calendar>type}"
										color="{calendar>color}"
									/>						
								</m:appointments>
							</m:PlanningCalendarRow>
						</m:rows>
					</m:PlanningCalendar>
                </ObjectPageSubSection>
			</ObjectPageSection>
			<ObjectPageSection titleUppercase="false" id="personalSection">
					<!-- <heading><m:MessageStrip text="Lorem Ipsum is simply dummy text of the printing and typesetting industry." type="Error" /></heading> -->

					<subSections>
					<ObjectPageSubSection id="idSmartTableParent" title="Table view" titleUppercase="false">
						<!-- <blocks> -->

						<!-- </blocks> -->
						<!-- <moreBlocks>
						</moreBlocks> -->
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="General view">
                <ObjectPageSubSection>
					<m:SinglePlanningCalendar
						id="SinglePlanningCalendar"
						startDateChange=".startDateChangeHandler"
						viewChange=".viewChangeHandler"
						appointments="{calendar>/list}"
						startDate="{calendar>/startDate}"
						appointmentSelect=".handleAppointmentSelect"
						title="{calendar>/singleTitle}"
						firstDayOfWeek="1">
						<m:actions>
							<m:Button
								text="Create"
								press=".appointmentCreate"
								tooltip="Create new item"
								id="btCreate1"
								enabled="false"/>
							<m:Button
								icon="sap-icon://legend"
								press=".openLegend"
								tooltip="Open Single Planning Calendar legend"
								ariaHasPopup="Dialog"/>
						</m:actions>
						<m:views>
							<!-- Month only 
								<SinglePlanningCalendarWeekView
								key="Week"
								title="Week"/> -->
							<m:SinglePlanningCalendarMonthView
								key="OneMonth"
								title="Month"/>

						</m:views>
						<m:appointments>
							<unified:CalendarAppointment
								startDate="{calendar>start}"
								endDate="{calendar>end1}"
								title="{calendar>ename}"
								text="{calendar>tooltip}"
								tooltip="{calendar>role_text} - {calendar>tooltip}"
								type="{calendar>type}"
								color="{calendar>color}"
								icon="{calendar>pic}">
							</unified:CalendarAppointment>
						</m:appointments>
					</m:SinglePlanningCalendar>
                </ObjectPageSubSection>
			</ObjectPageSection>


			<ObjectPageSection titleUppercase="false" title="Defaults">
                <ObjectPageSubSection>
<m:VBox>
					<smartFilterBar:SmartFilterBar id="idDefaultFilter" persistencyKey="searchListReportVariant"
                        entitySet="ZC_HR231_Defaults" enableBasicSearch="true" showClearOnFB="true" liveMode="true" showMessages="true"
                                                      useToolbar="false">
                        <smartFilterBar:layoutData>
                            <m:FlexItemData shrinkFactor="1"/>
                        </smartFilterBar:layoutData>
                        <!-- <smartFilterBar:controlConfiguration>
                            <smartFilterBar:ControlConfiguration key="begda"     visible="false"  />
                        </smartFilterBar:controlConfiguration> -->
                    </smartFilterBar:SmartFilterBar>

						<!-- id="smartTable"  initiallyVisibleFields="pernr,ename,begda,endda" -->
						<smartTable:SmartTable 
							id="idDefaultList"
							smartFilterId="idDefaultFilter"
							entitySet="ZC_HR231_Defaults" 
							header="Employee defaults" 
							showRowCount="true"
							tableType="ResponsiveTable"
							enableAutoBinding="true"
							useTablePersonalisation="false"					
							>

							 <!-- 
							useExportToExcel="true" useVariantManagement="false"                         
									enableAutoColumnWidth="true"
							 -->

						<smartTable:customToolbar>
							<m:OverflowToolbar design="Transparent">
								<m:ToolbarSpacer/>
								<m:Button text="Create"  press="onDefaultEditClick('CRE')"
									      id="btCreate3"
								          enabled="false"/>
							</m:OverflowToolbar>
						</smartTable:customToolbar>

						<m:Table sticky="ColumnHeaders,HeaderToolbar">
							<m:columns>
								<m:Column>
									<m:customData>
										<core:CustomData key="p13nData" value='\{"columnKey": "edit", "columnIndex": 0}'/>
									</m:customData>
									<!-- <m:Text text=""></m:Text> -->
								</m:Column>
							</m:columns>
							<m:items>
								<m:ColumnListItem>
									<m:HBox>
										<m:Link text="Edit " target="EDT-{pernr}" press="onDefaultEditClick"></m:Link>
										<m:Text text=" - "/>
										<m:Link text=" Delete" target="DEL-{pernr}" press="onDefaultEditClick"></m:Link>
									</m:HBox>
								</m:ColumnListItem>
							</m:items>
						</m:Table>

                        <smartTable:layoutData>
                            <m:FlexItemData growFactor="1" baseSize="0%"/>
                        </smartTable:layoutData>
                    </smartTable:SmartTable>
</m:VBox>
                </ObjectPageSubSection>
			</ObjectPageSection>
			
		</sections>
		<!-- <footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer />
				<m:Button type="Accept" text="Accept"/>
				<m:Button type="Reject" text="Reject"/>
			</m:OverflowToolbar>
		</footer> -->
	</ObjectPageLayout>
</core:FragmentDefinition>
